@model Itqan.Models.Course

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutCpanelRTL2.cshtml";
}


@using (Html.BeginForm("Edit","Courses",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_course)

        <div class="form-group">
            @Html.LabelFor(model => model.Name_Course, htmlAttributes: new { @class = "control-label col-md-2" })
