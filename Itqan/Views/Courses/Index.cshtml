            <td>
                @Html.DisplayFor(modelItem => item.Name_Course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descreption_Course)
            </td>
            <td>
                @Html.DisplayFor(model => item.IMG_course)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Define_Itqan.Name_Itqan)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_course }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_course }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_course })
