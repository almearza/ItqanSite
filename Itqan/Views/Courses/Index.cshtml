@model IEnumerable<Itqan.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCpanelRTL2.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name_Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descreption_Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMG_course)
        </th>
