                        </div>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.NameSend, new { htmlAttributes = new { @class = "form-control required", id = "uploadIMG", placeholder = resoursear.fullname } })
                            @Html.ValidationMessageFor(model => model.NameSend, "", new { @class = "text-danger" })
                        </div>

