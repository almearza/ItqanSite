                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", id = "email", placeholder = resoursear.Email, type = "email" } })
                            @*<input class="form-control" id="email" placeholder="Your Email" type="email">*@
                        </div>
                        <div class="col-md-4">
                            @*<input class="form-control" id="subject" placeholder="Subject" type="text">*@
                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", id = "subject", placeholder = resoursear.Subject, type = "text" } })

                        </div>

                        <div class="col-md-12">
                            @*<textarea class="form-control" id="message" rows="7" placeholder="Your Message"> </textarea>*@
                            @Html.TextAreaFor(model => model.ContentMessage, new { @class = "form-control", rows = "7", placeholder = resoursear.Message, id = "ContentMessage" })
                            @*@Html.TextAreaFor(model => model.ContentMessage, new { htmlAttributes = new { @class = "form-control", id = "message", rows = "7", placeholder = "Your Message" } })*@
