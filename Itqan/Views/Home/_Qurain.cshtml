@using Itqan.Models
@using Itqan.Ressourse
@{
    ItqanEntities db = new ItqanEntities();


    var userLang = Request.Cookies["userLang"];
    int langId;
    if (userLang != null && userLang["langId"] != null)
    {
        langId = int.Parse(userLang["langId"]);
    }
    else
    {
        langId = 1;
    }
}


<section id="about" style="background-color:#e9e9e9!important;height:auto;">

    <div class="container">
        <div class="title-box text-center">
            <h2 class="title  droid-arabic-kufi" style="">   @resourse.qudiah</h2>
        </div>

        <div class="row" style="">

            @if (langId == 1)
            {
                <div class="col-lg-5 col-md-6 shadow p-3 mb-5 bg-white rounded">
                    <div class="about-img">
                        <img src="~/images/parallax/quran45.jpg" class="img-responsive" alt="" style="width: 100%; max-width:100%;height:auto;
                                              opacity:1;border-style:solid;
                                              border-color: var( --e-global-color-8d36ed4 );
                                              border-radius: 20px 20px 20px 20px;">
                    </div>
                </div>

                <div class="col-lg-7 col-md-6 ">
                    <div class="about-content">
                        <h4 class="droid-arabic-kufi" style="font-weight:600;font-size:20px;line-height:1.8 ;padding-top:20px;padding-bottom:20px;margin-top:50px;">
                            @foreach (var item in db.FirstContentQuran.Where(a => a.Lang == langId))
                            {

                                @item.FirstContent
                            }
                        </h4>
                        <div>
                            <a href="~/home/Quran" class="" style="font-size: 13px;
                                           font-weight: 400;
                                           display: inline-block;
                                           padding: 10px 32px;
                                           transition: 0.5s;
                                           color: #fff;
                                           background: #0d84a4;
                                           font-size:20px;min-width:150px;min-height:50px;text-align:center;padding-top:15px;font-family: 'Noto Kufi Arabic', sans-serif;margin-top:30px;">@resourse.Moor</a>
                        </div>
                    </div>
                </div>


            }
            else
            {


                <div class="col-lg-7 col-md-6 ">
                    <div class="about-content">
                        <h4 class="droid-arabic-kufi" style="font-weight:600;font-size:20px;line-height:1.8 ;padding-top:20px;padding-bottom:20px;margin-top:50px;">
                            @foreach (var item in db.FirstContentQuran.Where(a => a.Lang == langId))
                            {

                                @item.FirstContent
                            }
                        </h4>
                        <div>
                            <a href="~/home/Quran" class="" style="font-size: 13px;
                                           font-weight: 400;
                                           display: inline-block;
                                           padding: 10px 32px;
                                           transition: 0.5s;
                                           color: #fff;
                                           background: #0d84a4;
                                           font-size:20px;min-width:150px;min-height:50px;text-align:center;padding-top:15px;font-family: 'Noto Kufi Arabic', sans-serif;margin-top:30px;">@resourse.Moor</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-6 shadow p-3 mb-5 bg-white rounded">
                    <div class="about-img">
                        <img src="~/images/parallax/quran45.jpg" class="img-responsive" alt="" style="width: 100%; max-width:100%;height:auto;
                                              opacity:1;border-style:solid;
                                              border-color: var( --e-global-color-8d36ed4 );
                                              border-radius: 20px 20px 20px 20px;">
                    </div>
                </div>

            }



        </div>


    </div>

</section><!-- #about -->
<!--End Facts-->