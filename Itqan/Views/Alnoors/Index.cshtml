                    <input type="submit" value="بحث" class="btn btn-primary" style="max-width:150px;" />
                </th>
                <th class="col-md-4">
                    <a href="~/Alnoors/Create" class="btn btn-primary">إضافة</a>
                </th>
            </tr>
        </table>
    }
<table class="table container text-center">
    <tr>
    <th class="col-md-2"> المميزات</th> 
    </tr>

@foreach (var item in Model) {
<tr>
    <td class="col-md-9">
        @Html.DisplayFor(modelItem => item.AdvantageAlnoor)
