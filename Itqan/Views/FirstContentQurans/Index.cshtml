@model IEnumerable<Itqan.Models.FirstContentQuran>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCpanelRTL2.cshtml";
}
    
        @using (Html.BeginForm())
        {
            <table class="table container pb-5">
                <tr>
                    <th>
                        @Html.DropDownList("Lang", null, htmlAttributes: new { @class = "form-control" })
                    </th>
                    <th class="col-md-1">
                        <input type="submit" value="بحث" class="btn btn-primary" style="max-width:150px;" />
                    </th>
                    <th class="col-md-4">
                        <a href="~/FirstContentQurans/Create" class="btn btn-primary">إضافة</a>
                    </th>

                    

                </tr>
            </table>

        }


<table class="table container"> 
@foreach (var item in Model) {

   <tr>
    <th class="col-md-2" style="text-align:right">
        القاعدة النورانية
    </th>
    <td class="col-md-10" style="text-align:center">
        @Html.DisplayFor(modelItem => item.FirstContent)
    </td>
    </tr>
    <tr>
    <th class="col-md-2" style="text-align:right">اللغة</th>
    <td class="col-md-10" style="text-align:center">@Html.DisplayFor(modelItem => item.Lang1.Name_lang) </td>
   </tr>
    <tr>
        <td class="col-md-1" style="text-align:right;">
            @Html.ActionLink("تعديل", "Edit", new { id = item.ID_Content },new { @class = "" })
            @*@Html.ActionLink("Details", "Details", new { id = item.ID_Content }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID_Content })*@
        </td>    
</tr>
}

</table>
