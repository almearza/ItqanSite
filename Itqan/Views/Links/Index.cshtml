@model IEnumerable<Itqan.Models.Links>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCpanelRTL2.cshtml";
}


    @using (Html.BeginForm())
    {
    <table class="table container text-center pb-5">
        <tr>
            <th>
                @Html.DropDownList("Lang", null, htmlAttributes: new { @class = "form-control" })
            </th>
            <th class="col-md-1">
                <input type="submit" value="بحث" class="btn btn-primary" style="max-width:150px;" />
            </th>
            <th class="col-md-4">
                <a href="~/Links/Create" class="btn btn-primary">إضافة</a>
            </th>
        </tr>
    </table>

    }

<table class="table">
    <tr>
        <th>
            الوصف
        </th>
        <th>
            الرابط
        </th>
        <th>
            الصور

        </th>
       
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descreption_Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.link)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.IMG_link)"  width="70" height="40"/>
           
        </td>
      
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.ID_Link }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.ID_Link }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_Link })*@
        </td>
    </tr>
}

</table>
