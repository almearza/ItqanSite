@model IEnumerable<Itqan.Models.Lang1>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCpanelRTL2.cshtml";
}


<div class="card-body">

    <a href="~/Lang1/Create" class="btn btn-primary">إضافة</a>

    <table class="table table-active" style="">
        <tr>
            <th>
                اللغة
            </th>
            <th>
                الكود
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_lang)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.ID_lang })
                    @*@Html.ActionLink("Details", "Details", new { id = item.ID_lang }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID_lang })*@
                </td>
            </tr>
        }

    </table>

</div>